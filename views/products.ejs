                    <a class="titulo-product"><h4><%=products[i].name%></h4></a>
                    <a class="descipcion-product"><p><%=products[i].description%></p></a>
                    <a class="precio-product"><h3>$ <%=products[i].price%></h3></a>
                </div>                
            </div>
        </div>
        </article> 
        <% }} %> 

