<!DOCTYPE html>
<html lang="en">
<head>
    <title>MercaFacil - Pagina de registro</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="/css/normalize.css">    
    <link rel="icon" data-head-react="true" href="/images/logo-banner.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
    <script type="text/javascript" src="/js/scripts.js"></script>

</head>
<body class="body">
    <%- include('./partials/header.ejs')-%>
    <div class="sub-header">

        <h2>REGISTRO</h2>
    </div>
    <section class="box-registro">
        <form action="/users/register" method="POST" enctype="multipart/form-data" class="form-registro">
            <div>
                <label>Nombres:</label>
                <input type="text" placeholder="Ingrese su nombre completo" name="firstName"
                value= "<%= locals.oldData ? oldData.nombre : null %>">
                <% if (locals.errors && errors.firstName) { %>
                    <div class="text-danger">
                        <%= errors.firstName.msg %>
                    </div>
                <% } %>
            </div>
            
            <div>
                <label>Apellidos:</label>
                <input type="text" placeholder="Ingrese sus apellidos" name="lastName">
            </div>

            <div class="flex-container">
                <% if (locals.errors && errors.lastName) { %>
                    <div class="text-danger">
                        <%= errors.lastName.msg %>
                    </div>
                <% } %> 
            </div>
            
            <div>
                <label>Email:</label>
                <div id="inputEmailContainer">
                    <input type="text" placeholder="Ingrese su correo electrónico" name="email" id="email">
                </div>
                <% if (locals.errors && errors.email) { %>
                    <div class="text-danger">
                        <%= errors.email.msg %>
                    </div>
                <% } %>
            </div>

            <div>
                <label>Contraseña:</label>
                <input type="password" placeholder="Ingrese su contraseña" name="password" id="password">
                <% if (locals.errors && errors.password) { %>
                    <div class="text-danger">
                        <%= errors.password.msg %>
                    </div>
                <% } %>
            </div>
            
            <div>
                <label>Perfil:</label>
                <select name="isAdmin">
                    <option value="0"> Usuario</option>
                    <option value="1"> Administrador</option>
                </select>
            </div>

            <div>
                <label>Telefono:</label>
                <input type="text" placeholder="Ingrese su telefono" name="phone">
                <% if (locals.errors && errors.phone) { %>
                    <div class="text-danger">
                        <%= errors.phone.msg %>
                    </div>
                <% } %> 
            </div>

            <div>
                <label>Dirección:</label>
                <input type="text" placeholder="Ingrese su dirección" name="address">
                <% if (locals.errors && errors.address) { %>
                    <div class="text-danger">
                        <%= errors.address.msg %>
                    </div>
                <% } %>
            </div>

            <div>
                <label class="form-label">Cargar Imagen:</label>
                    <div>
                        <input type="file" name="avatar" value="">
                        <% if (locals.errors && errors.avatar) { %>
                            <div class="text-danger">
                                <%= errors.avatar.msg %>
                            </div>
                        <% } %> 
                    </div>
            </div>

            <div>
                <button type="submit" class="btn-form2" id="registrarse" name="registrarse">REGISTRARSE</button>
            </div>

        </form>
        <div class="box-img-registro">
            <img src="/images/register.png" class="img">
        </div>

    </section>    
    
    <script src="/js/registerValidations.js"></script>
</body>

<%- include('./partials/footer')-%>

</html>